{
  "name": "stem-tutor",
  "version": "1.0.0",
  "description": "Offline STEM Learning Platform with AI Tutoring",
  "scripts": {
    "start": "./start.sh",
    "install": "npm run install:all",
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm start",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "clean": "rm -rf backend/node_modules frontend/node_modules package-lock.json",
    "fix-packages": "./fix-packages.sh",
    "fix-npm": "./fix-npm-issues.sh",
    "fix-permissions": "./fix-permissions.sh",
    "quick-fix": "./quick-fix.sh",
    "troubleshoot": "./troubleshoot.sh",
    "test": "./test.sh",
    "test:backend": "curl -f http://localhost:3001/api/health || echo 'Backend not running'",
    "test:frontend": "curl -f http://localhost:5173 || echo 'Frontend not running'"
  },
  "keywords": [
    "stem",
    "education",
    "offline",
    "learning",
    "ai-tutor"
  ],
  "author": "STEM Tutor Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}